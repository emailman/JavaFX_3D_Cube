<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<TabPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="com.example.cube.CubeController">
    <tabs>
        <Tab closable="false" text="CubeSize">
            <content>
                <VBox spacing="10.0">
                    <Label text="X-Size">
                    </Label>
                    <Slider
                            fx:id="sldX1" majorTickUnit="0.5" max="2" showTickLabels="true"
                            value="1.0">
                    </Slider>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>

                    <Label text="Y-Size">
                    </Label>
                    <Slider
                            fx:id="sldY1" majorTickUnit="0.5" max="2" showTickLabels="true"
                            value="1.0">
                    </Slider>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>

                    <Label text="Z-Size">
                    </Label>
                    <Slider
                            fx:id="sldZ1" majorTickUnit="0.5" max="2" showTickLabels="true"
                            value="1.0">
                    </Slider>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>

                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </content>
        </Tab>
    </tabs>
</TabPane>
